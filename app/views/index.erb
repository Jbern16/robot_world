<section id = 'robots'>
      <h3> Your Robots </h3>
        <% @robots.each do |robot| %>
        <h3><a href="/robots/<%= robot.id %>"><img src="https://robohash.org/<%= robot.avatar %>.png"></a></h3>

          <a id="robot-name" href="/robots/<%= robot.id %>/edit">Edit</a>
          <form action="/robots/<%= robot.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input role="button" type="submit" value="Delete">
          </form>
      <% end %>
    </section>
